function Countdown({ targetISO }: { targetISO: string }) {
  const [t, setT] = useState({d:0,h:0,m:0,s:0});
  useEffect(()=>{
    const id = setInterval(()=>{
      const target = new Date(targetISO).getTime();
      const now = Date.now();
      const diff = Math.max(0, target - now);
      const d = Math.floor(diff/86400000);
      const h = Math.floor((diff%86400000)/3600000);
      const m = Math.floor((diff%3600000)/60000);
      const s = Math.floor((diff%60000)/1000);
      setT({d,h,m,s});
    }, 1000);
    return ()=> clearInterval(id);
  }, [targetISO]);
  return (
    <div className="mt-6 grid grid-cols-4 gap-2 w-full max-w-xs text-center">
      {Object.entries(t).map(([k,v])=> (
        <div key={k} className="rounded-xl bg-white/10 backdrop-blur text-white/90 py-2">
          <div className="text-xl font-bold">{v.toString().padStart(2,'0')}</div>
          <div className="text-[11px] uppercase tracking-wide">{k}</div>
        </div>
      ))}
    </div>
  )
}

