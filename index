          <div className="text-xs uppercase tracking-wider text-slate-500">{kicker}</div>
          <h2 className="text-2xl sm:text-3xl font-bold mt-2 text-slate-900">{title}</h2>
        </div>
        <div className="mt-6">{children}</div>
      </div>
    </section>
  )
}

